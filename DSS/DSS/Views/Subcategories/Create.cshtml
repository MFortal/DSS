@using DSS.Common
@model DSS.ViewModels.Subcategory.CreateSubcategoryViewModel

@{
    ViewBag.Title = HeaderTexts.Create + HeaderTexts.ForSubcategory;
}

<h2>@HeaderTexts.Create@HeaderTexts.ForSubcategory</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-2">
                @DefaultNames.Name
            </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">
                @DefaultNames.Category
            </p>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.SelectedCategoryId, @Model.Categories, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Categories, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">
                @DefaultNames.Properties
            </p>
            <div class="col-md-10">
                @Html.ListBoxFor(x => x.SelectedPropertyIds, @Model.Properties, htmlAttributes: new { @class = "form-control", @size = "6" })
                @Html.ValidationMessageFor(x => x.Properties, "", new { @class = "text-danger" })

                <div style="margin-top:10px;">
                    <a class="btn btn-default" href="@Url.Action( "Create", "Properties")">@ButtonTexts.Create@ButtonTexts.ForProperty</a>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@ButtonTexts.Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}


@Scripts.Render("~/bundles/jquery")