@using DSS.Common
@model DSS.Models.Category

@{
    ViewBag.Title = HeaderTexts.Details + HeaderTexts.ForCategory;
}

<h2>@HeaderTexts.Details@HeaderTexts.ForCategory</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @DefaultNames.Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @DefaultNames.Image
        </dt>

        <dd>
            <img src="@DefaultPaths.CategoriesImagesPath@Html.DisplayFor(model => model.Image)" width="50" height="50" />
        </dd>

        <dt>
            @DefaultNames.Subcategories
        </dt>

        <dd>
            <ul>
                @foreach (var subcategory in Model.Subcategories)
                {
                    <li>
                        @subcategory.Name
                    </li>
                    <p>
                        <a href="@Url.Action("Edit", "Subcategories", new { id = subcategory.Id})">@ButtonTexts.Edit</a> |
                        <a href="@Url.Action("Details", "Subcategories", new { id = subcategory.Id})">@ButtonTexts.Details</a> |
                        <a href="@Url.Action("Delete", "Subcategories", new {id = subcategory.Id})">@ButtonTexts.Delete</a>
                    </p>
                }
            </ul>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(ButtonTexts.Create + ButtonTexts.ForSubcategory, "Create", "Subcategories")
</p>
