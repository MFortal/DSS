@using DSS.Common
@model IEnumerable<DSS.Models.Category>

@{
    ViewBag.Title = DefaultNames.CatalogComponents;
}

<h2>@DefaultNames.CatalogComponents</h2>

<table class="table table-hover">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="#" class="category-title a-category">@Html.DisplayFor(modelItem => item.Name)</a>
                <div class="subcategory-list list-group">
                    <ul class="list-group">
                        @foreach (var subItem in item.Subcategories)
                        {
                            <li class="list-group-item list-group-item-action li-item">
                                <a href="@Url.Action("Index", "SearchComponents", new {subcategoryId = subItem.Id})"><span class="glyphicon glyphicon-pushpin"></span> @Html.DisplayFor(modelItem => subItem.Name)</a>
                            </li>
                        }
                    </ul>
                </div>
            </td>
            <td>
                <img class="img-category" src="@DefaultPaths.CategoriesImagesPath@Html.DisplayFor(modelItem => item.Image)" />
            </td>
            @if (User.IsInRole(DefaultRoles.Admin))
            {
                <td>
                    <a class="btn btn-primary a-text" href="@Url.Action("Edit",  new { id = item.Id })">@ButtonTexts.Edit</a>
                    <a class="btn btn-info a-text" href="@Url.Action("Details",  new { id = item.Id })">@ButtonTexts.Details</a>
                    <a class="btn btn-danger a-text" href="@Url.Action("Delete",  new { id = item.Id })">@ButtonTexts.Delete</a>
                </td>
            }
        </tr>
    }
</table>
@if (User.IsInRole(DefaultRoles.Admin))
{
    <div>
        <a class="btn btn-success a-text" href="@Url.Action("Create")">@ButtonTexts.Create @ButtonTexts.ForCategory</a>
    </div>
}

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.category-title').click(function () {
            $(this).parent().children('.subcategory-list').slideToggle();
            return false;
        });
    });
</script>
