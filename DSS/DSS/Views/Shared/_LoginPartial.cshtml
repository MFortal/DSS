@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="li-menu">
                <a class="a-not-margin" title="Manage" href="@Url.Action("Index", "Manage", routeValues: null)"><span class="glyphicon glyphicon-user"></span> @User.Identity.GetUserName()</a>
            </li>
            <li class="li-menu">
                <a class="a-not-margin" href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out"></span> Выйти</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="li-menu">
            <a class="a-not-margin" id="registerLink" href="@Url.Action("Register", "Account", routeValues: null)"><span class="glyphicon glyphicon-plus"></span> Регистрация</a>
        </li>
        <li class="li-menu">
            <a class="a-not-margin" id="loginLink" href="@Url.Action("Login", "Account", routeValues: null)"><span class="glyphicon glyphicon-log-in"></span> Вход</a>
        </li>
    </ul>
}
