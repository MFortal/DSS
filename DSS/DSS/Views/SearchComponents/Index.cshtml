@model  DSS.ViewModels.SearchViewModel

@{
    ViewBag.Title = "Поиск компонентов";
}

<style>
    /*Стили для формы поиска*/
    .flex, .flexButtons {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        padding: 5px;
    }

    .flex-itm {
        border: 1px solid gray;
        border-radius: 10px 0 0 10px;
        height: 200px;
        width: auto;
        overflow-y: scroll; /* прокрутка по вертикали */
        margin: 5px;
        padding: 15px;
    }

    .flex-btn {
        margin: 5px;
    }

    .nameProperty {
        font-size: 16px;
        text-align: center;
    }

    sup {
        cursor: help;
    }

    table {
        margin-top: 50px;
    }

    .component {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-size: 16px;
    }

    /*DropDownLists*/
    <style >
    /* Style The Dropdown Button */
    .dropbtn {
        padding: 16px;
        font-size: 16px;
        cursor: pointer;
        display: block;
    }

    /* The container <div> - needed to position the dropdown content */
    .dropdown {
        position: relative;
        display: inline-block;
    }

    /* Dropdown Content (Hidden by Default) */
    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        /* Links inside the dropdown */
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: antiquewhite;
            }
    /* Show the dropdown menu on hover */
    .dropdown:hover .dropdown-content {
        display: block;
    }

    .notFound {
        font-size: 14px;
        color: darkgray;
    }
</style>

<h3>Поиск компонентов</h3>

<div class="dropdown">
    <div class="dropbtn">
        @foreach (var thisCat in @ViewBag.categoryThis)
        {
            @thisCat.Name
        }
    </div>
    <div class="dropdown-content">
        @foreach (var category in ViewBag.Categories)
        {
            <a href="@Url.Action("Index", "SearchComponents", new { categoryId = category.Id })">
                @category.Name
            </a>
        }
    </div>
</div>
<div class="dropdown">>></div>
<div class="dropdown">
    <div class="dropbtn">
        @foreach (var thisSub in @ViewBag.subcategoryThis)
        {
            @thisSub.Name
        }
    </div>
    <div class="dropdown-content">
        @foreach (var subcategory in ViewBag.Subcategories)
        {
            <a href="@Url.Action("Index", "SearchComponents", new { categoryId = ViewBag.categoryId, subcategoryId = subcategory.Id })">
                @subcategory.Name
            </a>
        }
    </div>
</div>

@using (Ajax.BeginForm("ShowResult", "SearchComponents", new AjaxOptions { UpdateTargetId = "results" }))
{
    <div class="flex">

        @Html.Partial("FilterProperty", Model.Filter.CountryProperty)
        @foreach (var filterPropertyViewModel in Model.Filter.Properties)
        {
            @Html.Partial("FilterProperty", filterPropertyViewModel)
        }
    </div>
    <div class="flexButtons">
        <input class="btn btn-success flex-btn" type="submit" value="Искать" />
        <input class="btn btn-default flex-btn" type="reset" value="Сбросить" />
    </div>
}

<table class="table" id="results">
    @*Вывод наименований всех свойств компонентов*@
    <tr>
        <th>
            @Html.Label(Model.Result.TableHeader.ComponentNameColumnName)
        </th>
        <th>
            @Html.Label(Model.Result.TableHeader.CountryColumnName)
        </th>
        @foreach (var propertyName in Model.Result.TableHeader.PropertyColumnNames)
        {
            <th>
                @Html.Label(propertyName)
            </th>
        }
    </tr>

    @foreach (var row in Model.Result.Rows)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details", "SearchComponents", new { id = row.ComponentId })" class="component">
                    @Html.DisplayFor(x => row.ComponentName)
                </a>
            </td>
            <td>
                <sup>
                    <img src="../../Image/Countries/@Html.DisplayFor(x => row.CountryFlag)" width="20" height="20" />
                </sup>
                @row.CountryName
            </td>

            @foreach (var cell in row.Cells)
            {
                <td>
                    @cell.Value
                    @if (@cell.Unit != null)
                    {
                        <span> [@cell.Unit]</span>
                    }
                </td>
            }
        </tr>
    }
</table>

@Scripts.Render("~/scripts/jquery-3.3.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")